{
  "name": "NProxy",
  "version": "2.0.0",
  "description": "a tunneling proxy to xx gfw",
  "author": {
    "name": "zenxds",
    "email": "zenxds@gmail.com"
  },
  "scripts": {
    "start:dev": "PROXY_ENV=client ts-node src/index.ts",
    "start:client": "PROXY_ENV=client pm2 start lib/index.js --name NProxy",
    "start:server": "PROXY_ENV=server pm2 start lib/index.js --name NProxy",
    "start:client:docker": "PROXY_ENV=client pm2-runtime start lib/index.js",
    "start:server:docker": "PROXY_ENV=server pm2-runtime start lib/index.js",
    "connect": "ts-node test/connect.ts",
    "stop": "pm2 stop NProxy",
    "restart": "pm2 restart NProxy",
    "compile": "tsc",
    "prettier": "prettier src/**/*.ts --write",
    "lint": "eslint src/**/*.ts",
    "test": "jest ."
  },
  "keywords": [],
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/zenxds/NProxy"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn prettier && yarn compile && yarn test && git add ."
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/src/"
    ],
    "preset": "ts-jest"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "eslint": "^9.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.6.0"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "pm2": "^4.2.1"
  }
}
